# Required Configuration
GEMINI_API_KEY=your_api_key_here                               # Google Gemini API key

# =============================================================================
# Optional Configuration (all fields below have sensible defaults)
# =============================================================================

# Logging Configuration
LOG_LEVEL=error                                                # Logging level: debug, info, warn, error

# API Configuration
GEMINI_MODEL_NAME=gemini-2.5-flash-lite                        # AI model to use for document processing
GEMINI_MAX_ATTEMPTS=5                                          # Maximum retry attempts for API calls
GEMINI_INITIAL_DELAY_MS=3000                                   # Initial delay before retrying failed calls
GEMINI_MAX_BACKOFF_DELAY_MS=60000                              # Maximum backoff delay for retries
GEMINI_TIMEOUT_MS=5000                                         # Timeout for individual API calls
GEMINI_JITTER_WITH_SUGGESTED_DELAY_MS=3000                     # Jitter when API suggests delay
GEMINI_JITTER_WITHOUT_SUGGESTED_DELAY_MS=1000                  # Jitter for general retry delays

# Crawler Configuration
GEMI_BASE_URL=https://publicity.businessportal.gr              # Base URL for the Greek business portal
PAGE_LOAD_TIMEOUT_MS=60000                                     # Timeout for page loads
DOWNLOAD_TIMEOUT_MS=120000                                     # Timeout for document downloads
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36  # Browser user agent string
CRAWLER_MAX_RETRIES=3                                          # Maximum retry attempts for downloads
CRAWLER_HEADLESS=true                                          # Run browser in headless mode (true/false)

# Working Directory Configuration
WORKING_DIR=./.govdoc                                          # Base directory for all app outputs (default: ./.govdoc in project root)
                                                               # Creates: ./.govdoc/crawler/, ./.govdoc/doc-scanner/, ./.govdoc/cli/
                                                               # Use absolute path or ~ for home directory if desired

# OpenSearch Integration
# Configure based on your chosen environment (Delete the one not in use):
OPENSEARCH_PUSH=true                                           # Enable pushing data to OpenSearch
                                           
# Development Example:
OPENSEARCH_URL=https://localhost:9200                          # OpenSearch endpoint URL
OPENSEARCH_USERNAME=admin                                      # OpenSearch username
OPENSEARCH_PASSWORD=OPENSEARCH_INITIAL_ADMIN_PASSWORD          # OpenSearch password
OPENSEARCH_INDEX=govdoc-companies-000001                       # OpenSearch index name
OPENSEARCH_INSECURE=true                                       # Allow insecure SSL connections
OPENSEARCH_BATCH_SIZE=500                                      # Batch size for bulk operations
OPENSEARCH_INDEX_STRATEGY=static                               # Index strategy (static/dynamic)
OPENSEARCH_REFRESH=false                                       # Force refresh after operations

# Production Example:                                        
OPENSEARCH_URL=https://localhost:9200                          # OpenSearch endpoint URL
OPENSEARCH_USERNAME=govdoc_ingest                              # OpenSearch username
OPENSEARCH_PASSWORD=OPENSEARCH_PROD_GOVDOC_PASSWORD            # OpenSearch password
OPENSEARCH_INDEX=govdoc-companies-write                        # OpenSearch index name
OPENSEARCH_INSECURE=true  # Set to false when using proper certificates  # Allow insecure SSL connections
OPENSEARCH_BATCH_SIZE=500                                      # Batch size for bulk operations
OPENSEARCH_INDEX_STRATEGY=static                               # Index strategy (static/dynamic)
OPENSEARCH_REFRESH=false                                       # Force refresh after operations

